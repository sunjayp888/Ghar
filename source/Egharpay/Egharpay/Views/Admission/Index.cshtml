            <h3>
                Admissions <small></small>
            </h3>
        </div>
        @*<div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchAdmission(searchField)" class="form-control" placeholder="Search for Admission...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" ng-click="model.searchAdmission(searchField)" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>*@
    </div>
    @*@if (User.IsInAnyRoles("Admin"))
        {
            <div class="row">
                <div class="col-xs-12">
                    <a class="btn btn-app" href="@Url.Action("Create", "Admission")">
                        <i class="fa fa-user"></i> Create
                    </a>
                </div>
            </div>
        }*@
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                @*<div class="x_title">
                        <h2>
                            Admissions<small></small>
                        </h2>
                        <div class="clearfix"></div>
                    </div>*@
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th ng-click="model.order('CandidateName')" ng-class="model.orderClass('CandidateName')">Candidate Name</th>
                                            <th ng-click="model.order('Batch')" ng-class="model.orderClass('Batch')">Batch</th>
                                            <th ng-click="model.order('TotalFee')" ng-class="model.orderClass('TotalFee')">Total Fee</th>
                                            <th ng-click="model.order('FeePaid')" ng-class="model.orderClass('FeePaid')">Fees Paid</th>
                                            <th ng-click="model.order('FeePending')" ng-class="model.orderClass('FeePending')">Fees Pending</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="admission in model.admissions" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.viewAdmission(admission.AdmissionId)">
                                            <td><span ng-bind="admission.Registration.Enquiry.FirstName"></span> <span ng-bind="admission.Registration.Enquiry.MiddleName"></span> <span ng-bind="admission.Registration.Enquiry.LastName"></span></td>
                                            <td><span ng-bind="admission.Batch.Name"></span></td>
                                            <td><span ng-bind="admission.Registration.CandidateInstallment.CourseFee"></span></td>
                                            <td><span ng-bind="admission.Registration.CandidateFee.PaidAmount"></span></td>
                                            <td><span ng-bind="admission.Registration.CandidateFee.PaidAmount"></span></td>
                                            @*<td><span ng-bind="batch.BatchStartDate|date : format : shortDate"></span></td>*@
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                        @if (User.IsInAnyRoles("Admin"))
                                                        {
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="/Admission/Edit/{{admission.AdmissionId}}">
                                                                    Edit
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
